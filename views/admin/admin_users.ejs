<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/home.css">
    <link href="https://cdn.boxicons.com/3.0.8/fonts/basic/boxicons.min.css" rel="stylesheet">
    <title>WMS - Admin</title>
</head>
<body>
    <nav id="sidebar">
        <ul>
            <li class="logo">
                <h1>WMS</h1>
            </li>
            <li>
                <a href="/">
                    <i class="bx bx-dashboard"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li class="active">
                <a href="/admin/user">
                    <i class="bx bx-spanner"></i>
                    <span>Manage Users</span>
                </a>
            </li>
            <li>
                <a href="/add-employee">
                    <i class="bx bx-user-plus"></i>
                    <span>Add Employee</span>
                </a>
            </li>
        </ul>
        <ul>
            <li class="logout">
                <a href="/login">
                    <i class="bx bx-arrow-out-left-square-half"></i>
                    <span>Log out</span>
                </a>
            </li>
        </ul>
    </nav>
    <main>
        <div class="head-container">
            <i class="bx bx-spanner"></i>
            <h2>User Management</h2>
        </div>
            <div class="main-container">
                <div class="table-container">
                        <table>
                            <thead>
                                <tr>
                                    <th>Employee Code</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Current Role</th>
                                    <th>Change Role</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% users.forEach(user=> { %>
                                <tr>
                                    <td>
                                        <%= user.employee_code %>
                                    </td>
                                    <td>
                                        <%= user.first_name %>
                                        <%= user.last_name %>
                                    </td>
                                    <td>
                                        <%= user.email %>
                                    </td>
                                    <td>
                                        <span class="badge <%= user.role_name %>">
                                            <%= user.role_name %>
                                        </span>
                                    </td>
                                    <td>
                                        <form action="/admin/update-role" method="POST">
                                            <input type="hidden" name="user_id" value="<%= user.user_id %>">
                                            <select name="role_id">
                                                <% roles.forEach(role=> { %>
                                                    <option value="<%= role.role_id %>" <%=user.role_id===role.role_id ? 'selected' : ''
                                                        %>>
                                                        <%= role.role_name %>
                                                    </option>
                                                    <% }) %>
                                            </select>
                                            <button type="submit">Update</button>
                                        </form>
                                    </td>
                                </tr>
                                <% }) %>
                            </tbody>
                        </table>
                </div>
            </div>
    </main>
</body>
</html>
